<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:civ="http://schemas.android.com/apk/res-auto"
        android:layout_width="48dp"
        android:layout_height="48dp"
        civ:civ_border_color="@color/colorAccent"
        civ:civ_border_width="0.5dp"
        android:id="@+id/committerPhoto"
        android:src="@drawable/womam_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/committerName"
        android:layout_toEndOf="@id/committerPhoto"
        android:paddingStart="16dp"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/committerCommits"
        android:text="1764"
        android:layout_below="@id/committerName"
        android:paddingTop="8dp"
        android:layout_toEndOf="@id/committerPhoto"
        android:paddingStart="16dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_build_black_24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:id="@+id/committerAdmin"
        android:visibility="invisible"/>

</RelativeLayout>
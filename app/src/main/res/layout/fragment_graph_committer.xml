<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="3">

    <br.com.renanbandeira.bargraphlib.view.BarGraph
        xmlns:graph="http://schemas.android.com/apk/res-auto"
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        graph:axisLineColor="@color/colorPrimary"
        graph:gridLineColor="@color/colorPrimaryDark"
        graph:offsetBottomAxis="40dp"
        graph:horizontalGridSpacing="15dp"
        android:visibility="invisible"
        android:paddingStart="@dimen/paddingStart"
        android:layout_marginBottom="@dimen/paddingStart"
        />
    
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginStart="@dimen/paddingStart"
        android:layout_marginEnd="@dimen/paddingEnd"
        android:visibility="invisible"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/committers"
        android:paddingEnd="@dimen/paddingStart"
        android:paddingStart="@dimen/paddingStart"
        android:visibility="invisible"/>
</LinearLayout>